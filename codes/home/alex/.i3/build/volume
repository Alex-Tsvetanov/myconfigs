bindsym $mod+Control+Up exec pamixer --allow-boost -i 5 && vol n
bindsym $mod+Control+Down exec pamixer -d 5 && vol n
bindsym $mod+Control+m exec pamixer -t && vol n
bindsym XF86AudioRaiseVolume exec pamixer --allow-boost -i 5 && vol n
bindsym XF86AudioLowerVolume exec pamixer -d 5 && vol n
bindsym XF86AudioMute exec pamixer -t && vol n
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 
bindsym $mod+Control+Left exec playerctl previous
bindsym $mod+Control+Right exec playerctl next
bindsym $mod+Control+s exec playerctl stop
bindsym $mod+Control+a exec playerctl play-pause
